<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/food_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/pizza"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/food_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/food_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pizza"
            android:textSize="10dp"
            android:layout_marginTop="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/colorPrimaryText"/>

        <TextView
            android:id="@+id/food_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Realizar pedido"
            android:textSize="15dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="#03A9F4"
            android:layout_below="@id/food_title"/>

        <TextView
            android:id="@+id/price_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/price_end"
            android:layout_marginTop="18dp"
            android:layout_marginRight="2dp"
            android:text="POR"
            android:textSize="8dp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/price_end"
            android:layout_below="@id/price_middle"
            android:layout_marginTop="-5dp"
            android:layout_marginRight="1dp"
            android:text="R$"
            android:textSize="14dp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/price_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/price_end_cents"
            android:text="25"
            android:textSize="28dp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/price_end_cents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentRight="true"
            android:text=",99"
            android:textSize="8dp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"/>

    </RelativeLayout>


</RelativeLayout>